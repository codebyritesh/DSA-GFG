

//User function Template for Java

class Solution{
    public String removeConsecutiveCharacter(String S){
     
     
    String newStr = "";
    newStr+=S.charAt(0);
    
    char pre = S.charAt(0);
    
    for(int i=1; i<S.length(); i++){
        if(pre!=S.charAt(i)){
            newStr+=S.charAt(i);
            pre=S.charAt(i);
        }
    }
    
    return newStr;
        
    }
}
